<div class="table-responsive" style="min-height: 300px; padding: 0 60px">
  <table class="table table-striped table-sm table-hover" style="background-color: #fff">
    <thead>
      <tr>
        <th>#</th>
        <th><%= t ".title_name" %></th>
        <th><%= t ".title_phone" %></th>
        <th><%= t ".title_time" %></th>
        <th><%= t ".title_quantity" %></th>
        <th><%= t ".title_total" %></th>
        <th><%= t ".title_status" %></th>
        <th><%= t ".title_action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @result.each_with_index  do |i, index| %>
        <tr id="table-item">
          <td><%= index + 1 %></td>
          <td><%= i[:fullname] %></td>
          <td><%= i[:phone_number] %></td>
          <td><%= i[:order_time].to_formatted_s(:long) %></td>
          <td><%= i[:order_quatity] %></td>
          <td><%= number_to_currency(i[:price]) %></td>
          <td>
            <%= label_tag i[:status], i[:status], class:"badge badge-#{i[:status] == 'rejected' || i[:status] == 'cancel'  ? 'danger' : i[:status] == 'pending' ? 'primary' : 'success'}" %>
          </td>
          <td><%= link_to t(".btn_view_detail"), edit_order_path(i[:order_id]), class: "btn btn-detail" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>
